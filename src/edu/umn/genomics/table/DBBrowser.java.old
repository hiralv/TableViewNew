    public boolean stopCellEditing() {
      boolean done = super.stopCellEditing();
      setRows( (String)(catalogList.getSelectedValue()),
               (String)(schemaList.getSelectedValue()),
               (String)(tableList.getSelectedValue()),
               getRowColumns());
      return done;
    }
  }

